import qrcode
from qrcode.constants import ERROR_CORRECT_M

data = "https://your-link-or-text-here"

qr = qrcode.QRCode(
    version=None,                 # auto size
    error_correction=ERROR_CORRECT_M,  # ~15% error correction
    box_size=10,                  # pixel size of each module
    border=4                      # quiet zone (modules)
)
qr.add_data(data)
qr.make(fit=True)
img = qr.make_image(fill_color="black", back_color="white")
img.save("my_qr.png")
print("Saved my_qr.png")
